# MongoDB Configuration
MONGO_URL=mongodb://localhost:27017/

# Session Configuration
# IMPORTANT: Change this to a random, secure string in production!
SESSION_SECRET=change-this-to-a-secure-random-string-in-production

# Node Environment
NODE_ENV=development

# LLM API Keys
# At least one is required for chunk generation
GEMINI_API_KEY=your-gemini-api-key-here
OPENAI_API_KEY=your-openai-api-key-here
CLAUDE_API_KEY=your-claude-api-key-here

# Google OAuth (Optional)
# Get these from https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id-here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret-here
# Development:
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
# Production (Render): Replace 'your-app-name' with your actual Render app name
# GOOGLE_CALLBACK_URL=https://your-app-name.onrender.com/api/auth/google/callback

# SMTP Email Configuration (Optional - uses Ethereal in development)
# For production, use a real SMTP service like SendGrid, AWS SES, etc.
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="Metacognition Learning" <noreply@yourdomain.com>

# Server Port
PORT=3000

# WebAuthn Configuration (for Passkeys)
# Relying Party ID - should match your domain (without protocol or port)
# Development:
RP_ID=localhost
# Production (Render): Replace 'your-app-name' with your actual Render app name
# RP_ID=your-app-name.onrender.com

# Origin - full URL of your app (with protocol)
# Development:
ORIGIN=http://localhost:3000
# Production (Render): Replace 'your-app-name' with your actual Render app name
# ORIGIN=https://your-app-name.onrender.com
